@using DemoApplication.Areas.Client.ViewModels.Account
@model UpdatePasswordViewModel
<div class="col-lg-9 col-12 mt--30 mt-lg--0">
    <div class="myaccount-content">
        <h3>Password Details</h3>
        <div class="account-details-form">
            <form method="POST" asp-route="client-account-updatePassword">
                <div class="row">

                    <div class="col-12  mb--30">
                        <h4>Password change</h4>
                    </div>
                    <div class="col-12  mb--30">
                      <label asp-for="CurrentPassword">CurrentPassword</label>
                                <input asp-for="CurrentPassword" class="mb-0 form-control"  placeholder="Enter your CurrentPassword">
                                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                    </div>
                    <div class="col-lg-6 col-12  mb--30">
                    <label asp-for="Password">Password</label>
                                <input asp-for="Password" class="mb-0 form-control"  placeholder="Enter your password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col-lg-6 col-12  mb--30">
                        <label asp-for="ConfirmPassword">ConfirmPassword</label>
                                <input asp-for="ConfirmPassword" class="mb-0 form-control"  placeholder="Enter your ConfirmPassword">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <button class="btn btn--primary">Save Changes</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>